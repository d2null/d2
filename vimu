.\" Manpage for unix VIM.
.\" Contact hitliuyi@gmail.com to correct errors or typos.
.TH man 1 "03 Feb 2014" "1.0" "unix VIM man page"

.SH VIM Commands

.TP
\fBY,yy\fR
copy line
.TP
\fBy\fR
copy
.TP
\fBd\fR
cut
.TP
\fBP\fR
paste above line
.TP
\fBp\fR
paste below line
.TP
\fB:reg\fR
show registers
.TP
\fB"+y\fR
copy to clipboard, need X support
.TP
\fB"+p\fR
paste from clipboard, need X support
.TP
\fBdw\fR
delete word
.TP
\fBG\fR
goto end of file
.TP
\fBgg\fR
top of file
.TP
\fBV\fR
select lines
.TP
\fBv\fR
select chars
.TP
\fBN\fR
"prev" find
.TP
\fBn\fR
find "next"
.TP
\fB[[\fR
begin this func {
.TP
\fB]]\fR
begin next func {
.TP
\fBh\fR
left move
.TP
\fBj\fR
down move
.TP
\fBk\fR
up move
.TP
\fBl\fR
right move
.TP
\fB^\fR
goto first char at begin of line
.TP
\fB0\fR
goto begin of line
.TP
\fB$\fR
goto end of line
.TP
\fB%\fR
goto matching {} <> []
.TP
\fB:s/Foo/Bar\fR
find Foo replace w/ Bar
.TP
\fB:s/Foo/Bar/g\fR
all instances on line
.TP
\fB:%s/Foo/Bar/g\fR
apply to whole file
.TP
\fB:tabe file\fR
open a new tab and edit file
.TP
\fBgt\fR
goto next tab
.TP
\fBgT\fR
goto prev tab
.TP
\fB:e file\fR
open a new into buffer
.TP
\fB:bn\fR
goto next file in buffer
.TP
\fB:bd\fR
delete file in buffer
.TP
\fB:buffers, ls, files\fR
show buffers
.TP
\fB:b, buffer 2\fR
show buffer 2
.TP
\fB:sp file\fR
open file in new window
.TP
\fB:vsp file\fR
open file in new vertical window
.TP
\fB:Se dir\fR
open dir in new window
.TP
\fB:Ve dir\fR
open dir in new vertical window
.TP
\fB:[vertical] res[ize] +20\fR
increase [vertical] window size by 20
.TP
\fB:!shell command\fR
execute shell command
.TP
\fB/pattern
"Prev" search
.TP
\fB?pattern
"Next" search
.TP
\fBctrl-f\fR
"Prev" page
.TP
\fBctrl-b\fR
"Next" page
.TP
\fBw\fR
next word, short jump
.TP
\fBW\fR
next word, long jump
.TP
\fBb\fR
prev word, short jump
.TP
\fBB\fR
prev word, long jump
.TP
\fBJ\fR
join lines
.TP
\fBcw\fR
remove current word and edit
.TP
\fBcrtl+r\fR
redo typing
.TP
\fBma\fR
mark as 'a' at current pos
.TP
\fB`a\fR
goto mark 'a'
.TP
\fBctrl+o\fR
jump back to the previous (older) location.

.SH VIM Display
.TP
\fB:set incsearch\fR
inc search
.TP
\fB:set tabstop=2\fR
set tab stop
.TP
\fB:set ignorecase\fR
set ignore case
.TP
\fB:set nu\fR
show line number
.TP
\fB:set nonu\fR
hide line number
